# GPU 配置环境变量
# RTX 4090 优化配置

# GPU 设置
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,video,utility
GPU_COUNT=1

# 资源限制 (RTX 4090 优化)
CPU_LIMIT=8.0
MEMORY_LIMIT=8G
CPU_RESERVATION=2.0
MEMORY_RESERVATION=2G

# 网络设置
WEB_PORT=8081
NETWORK_SUBNET=172.28.0.0/16

# 应用设置
TZ=Asia/Shanghai
FFMPEG_LOGLEVEL=warning

# Go 运行时设置
GOMAXPROCS=8
GOGC=100

# 日志设置
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3

# Grafana 设置 (如果启用监控)
GRAFANA_PASSWORD=admin

